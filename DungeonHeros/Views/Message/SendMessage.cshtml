@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true"/>
    <title>Profile</title>
</head>
<body>
    <div class="form-body">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        <h3>Send message to winner</h3>
                        <form method="post">
                            <input class="form-control" type="text" name="teamId" hidden="true" value="@ViewData["TeamId"]">
                            <div class="col-md-12">
                                <input class="form-control" type="text" name="title" placeholder="Message title" required>
                            </div>
                            
                            <div class="col-md-12">
                               <input class="form-control" type="text" name="message" placeholder="Message to send" required>
                            </div>

                            <div class="form-button mt-3">
                                <button id="submit" type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
